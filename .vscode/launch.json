{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${pointers}/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${pointers}",
            "environment": [],
